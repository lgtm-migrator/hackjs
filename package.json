{
  "name": "hackjs",
  "version": "1.0.0",
  "description": "An implementation of the Hack computer, based on nand2tetris",
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "test-coverage": "jest --coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "tsc"
  },
  "dependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.11.2",
    "coveralls": "^3.0.9",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.0.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
